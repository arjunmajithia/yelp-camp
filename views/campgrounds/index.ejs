<% include ../partials/header %>

<div class="container">
    
    <div class="jumbotron mt-3 bg-light">
        <h3 class="display-4">Welcome to Sports Page</h3>
        <hr>
        <p class="lead">
            This website includes details of all the sports team in the world
        </p>
        <a href="/campgrounds/new" class="btn btn-lg btn-primary">Add New Sports Team</a>
    </div>
    
    <div class="row m-3">
        <% campgrounds.forEach(function(club){ %>
            <div class="col-lg-3 col-md-6 mb-3">
                
                <div class="card border-secondary">
                    <img src=" <%= club.image %> " class="img-card-top img-fluid p-2">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= club.name %></h5>
                        <p class="text-center">
                            <a href="/campgrounds/<%= club._id %>" class="btn btn-primary">Visit <%= club.name %></a>
                        </p>
                    </div>
                </div>    
                
            </div>
        <% }); %>
    </div>
    
    <div class="row text-center mb-5">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center m-auto">
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/campgrounds">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">«</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="page-item active"><a class="page-link"><%= i %></a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/campgrounds?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">»</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/campgrounds?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
    
</div>

<% include ../partials/footer %>